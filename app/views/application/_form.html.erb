<div class="contact-form">
<%= form_for(@contact , html: {class: 'form-horizontal'}) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.text_field :name, class:'form-control align-left', :placeholder => 'Name' %>
  </div>
  <div class="field form-group">
    <%= f.email_field :email, class:'form-control align-left', :placeholder => 'Email'  %>
  </div>
  <div class="field form-group">
    <%= f.text_area :message, class:'form-control align-left', :placeholder => 'Comments'%>
  </div>
  <div class="actions form-group">
    <%= f.submit 'submit', class:'btn btn-default align-left'%> 
  </div>
<% end %>
</div>
